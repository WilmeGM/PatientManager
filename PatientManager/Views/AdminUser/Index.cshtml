@using PatientManager.Core.Application.ViewModels.Users
@model List<UserViewModel>

@{
    ViewData["Title"] = "User Maintenance";
}

<div class="d-flex flex-row justify-content-center mb-3">
    <a asp-controller="AdminUser" asp-action="Create" class="">
        <i class="bi bi-plus-circle-fill btn-add" title="Add User"></i>
    </a>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-light-blue bg-gradient">
                    <h3 class="text-white text-center">User Maintenance</h3>
                </div>
                <div class="card-body">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th scope="col">First Name</th>
                                <th scope="col">Last Name</th>
                                <th scope="col">Username</th>
                                <th scope="col">Email</th>
                                <th scope="col">User Type</th>
                                <th scope="col">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model)
                            {
                                <tr>
                                    <td>@user.FirstName</td>
                                    <td>@user.LastName</td>
                                    <td>@user.Username</td>
                                    <td>@user.Email</td>
                                    <td>@user.UserType</td>
                                    <td>
                                        <div class="d-flex flex-row gap-4">
                                            <a asp-controller="AdminUser" asp-action="Edit" asp-route-id="@user.Id" class="">
                                                <i class="bi bi-pencil-square btn-edit" title="Edit"></i>
                                            </a>
                                            <a asp-controller="AdminUser" asp-action="Remove" asp-route-id="@user.Id" class="">
                                                <i class="bi bi-trash3-fill btn-remove" title="Remove"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                            @if (!Model.Any())
                            {
                                <tr>
                                    <td colspan="6" class="text-center">No users available</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
