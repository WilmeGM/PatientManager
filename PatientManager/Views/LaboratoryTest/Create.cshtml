@using PatientManager.Core.Application.ViewModels.LaboratoryTests
@model LaboratoryTestSaveViewModel

@{
    ViewData["Title"] = "Add New Laboratory Test";
}

<div class="row">
    <div class="col-6 offset-3">
        <div class="card">
            <div class="card-header bg-light-blue bg-gradient">
                <h4>Create a new laboratory test</h4>
            </div>
            <div class="card-body">
                @Html.ValidationSummary(false, "", new {@class = "text-danger"})

                <form method="post" asp-controller="LaboratoryTest" asp-action="Create">
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">Test Name: </label>
                        <input asp-for="Name" class="form-control" />
                    </div>

                    <input type="hidden" asp-for="Id" />

                    <div class="d-flex flex-row justify-content-end gap-2">
                        <button type="submit" class="btn btn-primary-custom">Add Test</button>
                        <a asp-controller="LaboratoryTest" asp-action="Index" class="btn btn-secondary">Go back</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
